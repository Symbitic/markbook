{
  "name": "markbook",
  "version": "0.1.0",
  "description": "Write books in commonmark.",
  "author": "Alex Shaw <alex.shaw.as@gmail.com>",
  "private": true,
  "license": "MIT",
  "bin": "bin/markbook",
  "repository": "github:Symbitic/markbook",
  "bugs": "https://github.com/Symbitic/markbook/issues",
  "keywords": [
    "markdown",
    "mdbook",
    "gitbook",
    "commonmark",
    "book"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "bundle": "pkg .",
    "build": "rollup -c",
    "check": "snyk test",
    "lint": "eslint \"src/**/*.js\"",
    "prebundle": "npm run build",
    "pretty": "prettier --write \"src/**/*.js\"",
    "release": "standard-version",
    "test": "jest",
    "watch": "rollup -c -w"
  },
  "pkg": {
    "assets": [
      "data/**/*"
    ],
    "targets": [
      "node8-linux-x64"
    ],
    "outputPath": "dist"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "browserslist": [
    "node 8"
  ],
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "cosmiconfig": "^5.1.0",
    "handlebars": "^4.1.0",
    "joi": "^14.3.0",
    "rehype-stringify": "^5.0.0",
    "remark-html": "^9.0.0",
    "remark-parse": "^6.0.3",
    "remark-rehype": "^4.0.0",
    "to-vfile": "^5.0.2",
    "unified": "^7.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-jest": "^24.1.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "fixturez": "^1.1.0",
    "husky": "^1.2.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "pkg": "^4.3.5",
    "prettier": "^1.15.2",
    "rollup": "^1.4.1",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-executable": "^1.4.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "snyk": "^1.135.1",
    "standard-version": "^5.0.1"
  }
}
