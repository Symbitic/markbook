{
  "name": "markbook",
  "version": "0.0.0",
  "description": "Write books in commonmark.",
  "author": "Alex Shaw <alex.shaw.as@gmail.com>",
  "private": true,
  "license": "ISC",
  "bin": "bin/markbook.js",
  "main": "build/markbook.cjs.js",
  "module": "build/markbook.esm.js",
  "repository": "github:Symbitic/markbook",
  "bugs": "https://github.com/Symbitic/markbook/issues",
  "keywords": [
    "markdown",
    "mdbook",
    "gitbook",
    "commonmark",
    "book"
  ],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "bundle": "pkg .",
    "build": "rollup -c",
    "check": "snyk test",
    "lint": "eslint \"src/**\"",
    "prebundle": "npm run build",
    "pretty": "prettier --write \"src/**/*.js\"",
    "release": "standard-version",
    "test": "ava",
    "watch": "rollup -c -w"
  },
  "pkg": {
    "assets": [
      "data/**/*"
    ],
    "targets": [
      "host"
    ],
    "outputPath": "dist"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "commander": "^2.19.0",
    "consolidate": "^0.15.1",
    "remark": "^10.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "ava": "^0.25.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-ava": "^5.1.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "pkg": "^4.3.4",
    "prettier": "^1.15.2",
    "rollup": "^0.67.3",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-executable": "^1.3.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "snyk": "^1.110.2",
    "standard-version": "^4.4.0"
  }
}
