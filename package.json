{
  "name": "markbook",
  "version": "1.4.0",
  "description": "Write books in commonmark.",
  "author": "Alex Shaw <alex.shaw.as@gmail.com>",
  "private": true,
  "license": "MIT",
  "bin": "bin/markbook",
  "repository": "github:Symbitic/markbook",
  "bugs": "https://github.com/Symbitic/markbook/issues",
  "keywords": [
    "markdown",
    "mdbook",
    "gitbook",
    "commonmark",
    "book"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "bundle": "pkg .",
    "build": "rollup -c",
    "doc": "node bin/markbook build doc",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint --fix \"src/**/*.js\"",
    "prebundle": "npm run build",
    "predoc": "npm run build",
    "pretty": "prettier-standard \"src/**/*.js\"",
    "release": "standard-version",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "watch": "rollup -c -w"
  },
  "pkg": {
    "assets": [
      "data/**/*"
    ],
    "targets": [
      "node8-linux-x64",
      "node8-macos-x64",
      "node8-win-x64"
    ],
    "outputPath": "dist"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "eslint --fix",
      "git add"
    ],
    "*.{json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "browserslist": [
    "node 8"
  ],
  "dependencies": {
    "chalk": "^2.4.1",
    "chokidar": "^2.1.5",
    "commander": "^2.20.0",
    "cosmiconfig": "^5.2.0",
    "handlebars": "^4.1.2",
    "inquirer": "^6.3.1",
    "is-wsl": "^2.0.0",
    "joi": "^14.3.0",
    "js-yaml": "^3.13.1",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "make-dir": "^3.0.0",
    "rehype-katex": "^1.2.0",
    "rehype-stringify": "^5.0.0",
    "remark-bibliography": "^0.2.0",
    "remark-deflist": "^0.2.0",
    "remark-frontmatter": "^1.3.1",
    "remark-html": "^9.0.0",
    "remark-math": "^1.0.6",
    "remark-meta": "^0.2.0",
    "remark-parse": "^6.0.3",
    "remark-redirect": "^0.2.0",
    "remark-rehype": "^4.0.0",
    "remark-retext": "^3.1.2",
    "remark-supersub": "^0.2.0",
    "remark-yaml-config": "^4.0.3",
    "retext-english": "^3.0.2",
    "retext-stringify": "^2.0.2",
    "rimraf": "^2.6.3",
    "to-vfile": "^5.0.2",
    "unified": "^7.1.0",
    "unist-util-visit": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-jest": "^24.7.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "fixturez": "^1.1.0",
    "globby": "^9.2.0",
    "husky": "^1.2.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "pkg": "^4.3.5",
    "prettier": "^1.17.0",
    "prettier-standard": "^9.1.1",
    "rollup": "^1.10.1",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-executable": "^1.4.5",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "standard-version": "^5.0.2"
  }
}
