{
  "name": "markbook",
  "version": "1.7.0",
  "description": "Write books in commonmark.",
  "author": "Alex Shaw <alex.shaw.as@gmail.com>",
  "private": true,
  "license": "MIT",
  "bin": "bin/markbook",
  "repository": "github:Symbitic/markbook",
  "bugs": "https://github.com/Symbitic/markbook/issues",
  "keywords": [
    "markdown",
    "mdbook",
    "gitbook",
    "commonmark",
    "book"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "bundle": "pkg .",
    "build": "rollup -c",
    "doc": "node bin/markbook build doc",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint --fix \"src/**/*.js\"",
    "prebundle": "npm run build",
    "predoc": "npm run build",
    "pretty": "prettier-standard \"src/**/*.js\"",
    "release": "standard-version",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "watch": "rollup -c -w"
  },
  "pkg": {
    "assets": [
      "data/**/*"
    ],
    "targets": [
      "node8-linux-x64",
      "node8-macos-x64",
      "node8-win-x64"
    ],
    "outputPath": "dist"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "eslint --fix",
      "git add"
    ],
    "*.{json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "node 8"
  ],
  "dependencies": {
    "archiver": "^3.0.0",
    "axios": "^0.19.0",
    "chalk": "^3.0.0",
    "chokidar": "^3.0.0",
    "commander": "^4.1.1",
    "cosmiconfig": "^6.0.0",
    "handlebars": "^4.1.2",
    "hast-util-to-html": "^7.0.0",
    "husky": "^4.2.1",
    "inquirer": "^7.0.4",
    "is-wsl": "^2.0.0",
    "joi": "^14.3.0",
    "js-yaml": "^3.13.1",
    "koa": "^2.7.0",
    "koa-router": "^8.0.7",
    "koa-send": "^5.0.0",
    "make-dir": "^3.0.0",
    "mdast-util-to-hast": "^7.0.0",
    "plantuml-encoder": "^1.2.5",
    "puppeteer-core": "^2.1.1",
    "rehype-katex": "^2.0.0",
    "rehype-stringify": "^6.0.1",
    "remark-bibliography": "^0.2.1",
    "remark-deflist": "^0.2.1",
    "remark-frontmatter": "^1.3.1",
    "remark-html": "^10.0.0",
    "remark-math": "^2.0.0",
    "remark-meta": "^0.2.1",
    "remark-parse": "^7.0.2",
    "remark-redirect": "^0.2.1",
    "remark-rehype": "^5.0.0",
    "remark-retext": "^3.1.2",
    "remark-supersub": "^0.2.1",
    "remark-yaml-config": "^4.0.3",
    "retext-english": "^3.0.2",
    "retext-stringify": "^2.0.2",
    "rimraf": "^3.0.2",
    "to-vfile": "^6.0.0",
    "unified": "^8.4.2",
    "unist-util-visit": "^2.0.1",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "pkg": "^4.4.3",
    "prettier": "^1.19.1",
    "prettier-standard": "^16.1.0",
    "rollup": "^1.31.0",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-executable": "^1.5.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "standard-version": "^7.1.0"
  }
}
